{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">CityFinder</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form method="POST" class="navbar-form navbar-right" action="{{ path('web_commune_search') }}">
                    <div class="form-group">
                        {{ form_widget(form.recherche, {'form_label':' ', attr:{'placeholder':'Ville'}}) }}
                        {{ form_rest(form) }}
                    </div>
                    <button type="submit" class="btn btn-success">Rechercher commune</button>
                </form>
            </div><!--/.navbar-collapse -->
        </div>
    </nav>


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1>{{ commune.name }}</h1>
            <p>Voici les différentes informations relatives à cette communes</p>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Centrales à moins de 20 km<span class="badge pull-right">{{ commune.centralesNear20km|length }}</span>
                    </div>

                    <ul class="list-group">
                        {% for centrale in commune.centralesNear20km %}
                            <li class="list-group-item">{{ commune.name }}</li>
                        {% else %}
                            <li class="list-group-item">Cette commune n'est pas concernée par cette catégorie</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Centrales à moins de 30 km<span class="badge pull-right">{{ commune.centralesNear30km|length }}</span>
                    </div>
                    <ul class="list-group">
                        {% for centrale in commune.centralesNear30km %}
                            <li class="list-group-item">{{ centrale.name }}</li>
                        {% else %}
                            <li class="list-group-item">Cette commune n'est pas concernée par cette catégorie</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Centrales à moins de 80 km<span class="badge pull-right">{{ commune.centralesNear80km|length }}</span>
                    </div>

                    <ul class="list-group">
                        {% for centrale in commune.centralesNear80km %}
                            <li class="list-group-item">{{ centrale.name }}</li>
                        {% else %}
                            <li class="list-group-item">Cette commune n'est pas concernée par cette catégorie</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>

        </div>

        <hr>

        <footer class="text-center">
            <p>Asif ADAMSHA - Fabien GRISELLES 2018</p>
        </footer>
    </div>


{% endblock %}