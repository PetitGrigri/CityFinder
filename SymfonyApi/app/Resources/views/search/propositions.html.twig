{% extends 'base.html.twig' %}

{% block body %}


    {{ render(controller('CityFinderBundle:WebSearch:getNavigation')) }}


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <h1>Alternatives à {{ commune }}</h1>
            <p>Voici une liste de communes pouvant correspondre à votre recherche</p>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Liste des alternatives<span class="badge pull-right">{{ propositions|length }}</span></h3>
                    </div>

                    <div class="panel-body">
                        {% for proposition in propositions %}
                            <a href="{{ path('web_commune_search',{'commune':proposition.nom, 'departement':proposition.codeDept }) }}" class="col-md-6 col-lg-4">
                                {{ proposition.nom }} ({{ proposition.codeDept }})
                            </a>

                        {% else %}
                            Cette commune n'existe pas, et aucune alternative n'a été trouvées.
                        {% endfor %}
                    </ul>

                </div>
            </div>
        </div>
    </div>


{% endblock %}